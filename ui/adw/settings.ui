<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="AdwPreferencesPage" id="settings">
    <property name="name">settings</property>
    <property name="title" translatable="yes">Settings</property>
    <property name="icon-name">applications-utilities-symbolic</property>

    <child>
      <object class="AdwPreferencesGroup" id="settings_group">
        <property name="title" translatable="yes">Settings for extension</property>

        <!-- Restore Default Settings -->
        <child>
          <object class="AdwActionRow" id="restore_default_settings_row">
            <property name="title" translatable="yes">Restore Default Settings</property>
            <child>
              <object class="GtkButton" id="restore_default_settings_button">
                <property name="label" translatable="yes">Restore Default Settings</property>
              </object>
            </child>
          </object>
        </child>

        <!-- Export Current Settings -->
        <child>
          <object class="AdwActionRow" id="export_current_settings_row">
            <property name="title" translatable="yes">Export Current Settings</property>
            <child>
              <object class="GtkButton" id="export_current_settings_button">
                <property name="label" translatable="yes">Export Current Settings</property>
              </object>
            </child>
          </object>
        </child>

        <!-- Import Settings From File -->
        <child>
          <object class="AdwActionRow" id="import_settings_from_file_row">
            <property name="title" translatable="yes">Import Settings from File</property>
            <child>
              <object class="GtkButton" id="import_settings_from_file_button">
                <property name="label" translatable="yes">Import Settings from File</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

    <child>
      <object class="AdwPreferencesGroup" id="other_settings_group">
        <property name="title" translatable="yes">Other official IBus customization settings</property>

        <!-- GNOME Settings -->
        <child>
          <object class="AdwActionRow" id="gnome_settings_row">
            <property name="title" translatable="yes">GNOME Settings</property>
            <child>
              <object class="GtkButton" id="gnome_settings_button">
                <property name="label" translatable="yes">GNOME Settings</property>
              </object>
            </child>
          </object>
        </child>

        <!-- IBus Preferences -->
        <child>
          <object class="AdwActionRow" id="menu-ibus-preference_row">
            <property name="title" translatable="yes">IBus Preferences</property>
            <child>
              <object class="GtkButton" id="ibus_preferences_button">
                <property name="label" translatable="yes">IBus Preferences</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>
  </object>
</interface>

